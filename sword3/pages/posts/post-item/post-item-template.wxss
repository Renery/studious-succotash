.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 120rpx;
  margin-bottom: 120rpx;
  background-color: aliceblue;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-auther-date{
  margin: 40rpx 0 20rpx 10rpx;
}

.post-auther-photo{
  width: 110rpx;
  height: 110rpx;
  vertical-align: middle;
}

.post-date{
  margin-left: 20rpx;
  margin-bottom: 20px;
  vertical-align: middle;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-image{
  margin: 8rpx 0;
  width: 100%;
  height: 450rpx;
}

.post-content{
  color: #666;
  font-size: 32rpx;
  margin: 0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 30rpx;
}

.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16rpx;
  margin-top: 8px;
  margin-left: 10px;
}

.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}